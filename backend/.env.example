# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=vms_onvif
DB_USER=vms_user
DB_PASSWORD=vms_password_change_me

# JWT Secret
JWT_SECRET=your_jwt_secret_change_me_in_production

# HLS Configuration
HLS_PATH=/var/hls
HLS_BASE_URL=http://localhost:8080/hls

# Recording Configuration
RECORDING_PATH=/var/recordings
RECORDING_ENABLED=true
RECORDING_RETENTION_DAYS=7

# ONVIF Configuration
ONVIF_DISCOVERY_TIMEOUT=5000
ONVIF_DEFAULT_USERNAME=admin
ONVIF_DEFAULT_PASSWORD=admin

# FFmpeg Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
FFMPEG_HLS_TIME=2
FFMPEG_HLS_LIST_SIZE=5

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/vms-backend.log

# WebSocket
WS_PORT=3001
